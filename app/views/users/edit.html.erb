<div class="profile-page">
  <a class="home btn btn-info btn-sm" href="/"> << Home </a>
  <p class="lead text-center">Profile</p>

  <%= form_for @user, url: { action: 'update' } do |f| %>
    <%= f.label :email, "Your email address:" %>
    <%= f.email_field :email %>
    <span>We'll send you email notifications.</span>

    <%= f.label :first_name, "What's your first name?" %>
    <%= f.text_field :first_name, placeholder: "First name" %>
    <span></span>

    <%= f.label :phone, "What's your phone number?" %>
    <%= f.phone_field :phone, placeholder: "Phone number" %>
    <span>We'll send this when you contact someone.</span>

    <%= f.submit "Save", class: 'submit' %>
  <% end %>
</div>
