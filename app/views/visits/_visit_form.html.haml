- action = @visit.persisted? ? "update" : "create"

= form_for @visit, url: { action: action } do |f|
  = f.label :zipcode, "Where are you going?"
  = f.text_field :zipcode
  %span Zipcode near your destination.

  = f.label :start_date, "Starting when?"
  = f.text_field :start_date
  %span Arrival date.

  = f.label :end_date, "Ending when?"
  = f.text_field :end_date
  %span Departure date.

  = f.label :num_travelers, "How many total travelers?"
  = f.select :num_travelers, options_for_select((1..7).zip(1..7))
  %span Including yourself.

  = f.submit "Contact Hosts", class: "submit"
